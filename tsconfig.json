{
  "compilerOptions": {
    "target": "ESNext",                 // Specify your target ECMAScript version
    "module": "ESNext",                // Specify the module system
    "jsx": "react-jsx",                // Specify JSX factory
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Enable ES module interop
    "skipLibCheck": true,              // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "declaration": true,               // Generate declaration files (.d.ts)
    "declarationDir": "dist",
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // Source directory
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,           // Ensure each file is treated as a separate module
    // "types": ["dist/index.d.ts"]
  },
  "include": ["src/**/*.ts","src/**/*.d.ts", "src/**/*.tsx"], // Include TypeScript and TSX files
  "exclude": ["node_modules", "dist", "example"]          // Exclude specific directories
}