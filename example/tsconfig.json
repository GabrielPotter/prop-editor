{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules"
  ]
}